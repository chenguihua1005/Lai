<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:background="@drawable/grey_border"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_oper_zan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/icon_dianzan"
        android:background="@drawable/btn_status"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="赞"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#949494" />

    <TextView
        android:id="@+id/tv_oper_comment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/icon_edit"
        android:background="@drawable/btn_status"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="评论"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#949494" />

    <TextView
        android:id="@+id/tv_oper_jubao"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/icon_jubao"
        android:background="@drawable/btn_status"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="举报"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#949494" />

    <TextView
        android:id="@+id/tv_oper_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/icon_delete"
        android:background="@drawable/btn_status"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="删除"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />
</LinearLayout>
</RelativeLayout>