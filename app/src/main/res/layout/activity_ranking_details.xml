<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.softtek.lai.module.mygrades.view.RankingDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>

        <RelativeLayout
            android:id="@+id/Rl_list"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="无锡跑团"
                android:textSize="16sp"
                android:textColor="#333333"
                android:id="@+id/tv_rungroupname" />
            <ImageView
                android:id="@+id/Iv_fold"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_marginRight="20dp"
                android:src="@drawable/unfold" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="#d0cfcf"/>

        <android.support.design.widget.TabLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab"
            style="@style/myTabLayout1"/>

        <com.softtek.lai.widgets.NoSlidingViewPage
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab_content" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_group"
        android:visibility="invisible"
        android:layout_marginTop="101dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:scrollbars="none" />
</RelativeLayout>