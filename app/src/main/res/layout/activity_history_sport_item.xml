<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.softtek.lai.module.login.view.ForgetActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:src="@drawable/img_sport_icon" />

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:src="@drawable/img_history_sport_more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_more"
            android:layout_toRightOf="@+id/img_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="10dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize2"
                    android:textColor="@color/word"
                    android:text="跑步"/>
                <TextView
                    android:id="@+id/text_time"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize2"
                    android:textColor="@color/word5"
                    android:text="time"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip">
                <TextView
                    android:id="@+id/text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.32公里"
                    android:textColor="@color/word"
                    android:textSize="@dimen/textSize3"/>
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_value"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/img_history_sport_time"/>
                <TextView
                    android:id="@+id/text_during"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:55:55"
                    android:layout_marginLeft="5dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img"
                    android:textColor="@color/word6"
                    android:textSize="@dimen/textSize2"/>
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/text_kll"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dip"
                    android:src="@drawable/img_history_sport_kll"/>
                <TextView
                    android:id="@+id/text_kll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1012大卡"
                    android:layout_marginLeft="5dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/word6"
                    android:textSize="@dimen/textSize1"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
