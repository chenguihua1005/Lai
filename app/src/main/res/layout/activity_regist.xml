<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.softtek.lai.module.login.view.RegistActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_alignLeft="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="left|center"
                        android:src="@drawable/phone"/>
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="40dp"
                        android:singleLine="true"
                        android:inputType="phone"

                        android:hint="@string/phoneNum"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="left|center"
                        android:src="@drawable/password"/>
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="40dp"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="@string/passwordReg"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="left|center"
                        android:src="@drawable/password"/>
                    <EditText
                        android:id="@+id/et_repassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="40dp"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="@string/repassword"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="left|center"
                            android:src="@drawable/identify"/>
                        <EditText
                            android:id="@+id/et_identify"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="40dp"
                            android:inputType="number"
                            android:singleLine="true"
                            android:hint="验证码"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_get_identify"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="40dp"
                        android:layout_gravity="fill"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/identify_bg"
                        android:text="@string/sendIdentify"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/readeAndAgress"
                    android:checked="true"
                    style="@style/customCheckBoxTheme"
                    android:paddingLeft="10dp"
                    />

                </LinearLayout>
                <Button
                    android:id="@+id/btn_regist"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_next_btn"
                    android:text="@string/next"
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/tv_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/textview"
                    android:text="@string/protocol"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/buttom"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
