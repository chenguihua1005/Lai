<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.softtek.lai.widgets.chart.Chart
            android:id="@+id/bust_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chart_sport_bg"
            app:chartTitle1="胸围"/>

        <com.softtek.lai.widgets.chart.Chart
            android:id="@+id/waist_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chart_sport_bg"
            app:chartTitle1="腰围"/>

        <com.softtek.lai.widgets.chart.Chart
            android:id="@+id/hipline_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chart_sport_bg"
            app:chartTitle1="臀围"/>

        <com.softtek.lai.widgets.chart.Chart
            android:id="@+id/upper_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chart_sport_bg"
            app:chartTitle1="上臂围"/>

        <com.softtek.lai.widgets.chart.Chart
            android:id="@+id/datui_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chart_sport_bg"
            app:chartTitle1="大腿围"/>

        <com.softtek.lai.widgets.chart.Chart
            android:id="@+id/xiaotui_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chart_sport_bg"
            app:chartTitle1="小腿围"/>
    </LinearLayout>
</ScrollView>