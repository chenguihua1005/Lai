<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.softtek.lai.module.login.view.ForgetActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_fc"
                android:layout_width="fill_parent"
                android:layout_height="68dip"
                android:visibility="gone">

                <com.softtek.lai.widgets.CircleImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/circleImage"
                    android:layout_height="@dimen/circleImage"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_fuce" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/messageMarginLeft"
                    android:layout_marginRight="30dip"
                    android:layout_toRightOf="@+id/img1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复测提醒"
                        android:textColor="@color/word"
                        android:textSize="@dimen/textSize1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/messageMarginTop"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18261576084"
                            android:textColor="@color/word4"
                            android:textSize="@dimen/textSize2" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/img_message_more" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/grey2" />

            <RelativeLayout
                android:id="@+id/rel_1"
                android:layout_width="fill_parent"
                android:layout_height="68dip"
                android:visibility="gone">

                <com.softtek.lai.widgets.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/circleImage"
                    android:layout_height="@dimen/circleImage"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_default" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/messageMarginLeft"
                    android:layout_marginRight="30dip"
                    android:layout_toRightOf="@+id/img"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复测邀请"
                        android:textColor="@color/word"
                        android:textSize="@dimen/textSize1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/messageMarginTop"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1826157608d"
                            android:singleLine="true"
                            android:textColor="@color/word4"
                            android:textSize="@dimen/textSize2" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/img_message_more" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
