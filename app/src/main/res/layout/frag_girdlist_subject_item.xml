<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/im_photo"
                    android:layout_width="170dp"
                    android:layout_height="135dp"
                    android:src="@drawable/default_icon_rect"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/im_photo"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12课堂"/>
                    <TextView
                        android:id="@+id/tv_clickhot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2055"
                        android:drawableLeft="@drawable/hot_icon"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_photo1"
                    android:layout_width="170dp"
                    android:layout_height="135dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_icon_rect" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/im_photo"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12课堂"/>
                    <TextView
                        android:id="@+id/tv_clickhot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2055"
                        android:drawableLeft="@drawable/hot_icon"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


</RelativeLayout>
