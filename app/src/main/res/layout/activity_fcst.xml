<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
        <com.softtek.lai.widgets.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/img_default"
            android:layout_centerVertical="true"
            android:id="@+id/tv_stu_photo"
            />
        <TextView
            android:id="@+id/tv_stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="会飞的喵"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/tv_stu_photo"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(第四周)"
            android:layout_toRightOf="@+id/tv_stu_name"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#999999"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nocomit_fc_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="初始体重"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101.0"
            android:layout_toLeftOf="@+id/tv_danwei"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="#ffa200"/>
        <TextView
            android:id="@+id/tv_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="斤"
            android:layout_toLeftOf="@+id/im_right"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/im_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="当前体重"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101.0"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="#ffa200"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tv_danwei2"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:id="@+id/tv_danwei2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="斤"
            android:layout_toLeftOf="@+id/im_right2"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/im_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="体脂"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101.0"
            android:layout_toLeftOf="@+id/tv_danwei3"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="#ffa200"/>
        <TextView
            android:id="@+id/tv_danwei3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="斤"
            android:layout_toLeftOf="@+id/im_right3"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/im_right3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="内脂"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101.0"
            android:layout_toLeftOf="@+id/tv_danwei4"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="#ffa200"/>
        <TextView
            android:id="@+id/tv_danwei4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="斤"
            android:layout_toLeftOf="@+id/im_right4"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/im_right4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        />


</LinearLayout>
