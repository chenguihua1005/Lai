<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sc_transparent_background"
    android:orientation="vertical"
    tools:context=".module.retest.WriteActivity">

    <RelativeLayout
        android:id="@+id/rel_class_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/sc_transparent_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fragmentAssistantListMargin"
            android:textSize="@dimen/fragmentAssistantListTextSizes"
            android:text="@string/allClass" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fragmentAssistantListMargin"

            android:src="@drawable/img_select" />
    </RelativeLayout>
</LinearLayout>
