<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="16dp"
    android:background="@color/white">
    <com.softtek.lai.widgets.CircleImageView
        android:id="@+id/civ_header_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/img_default"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_toRightOf="@id/civ_header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="lee"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="#333333" />
        <CheckBox
            android:id="@+id/cb_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/cb_guanzhu_bg"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textColor="#666666"
            android:text="了解对方宽带计费路上看到附近的时空裂缝考虑到附近卡看风景阿登省开发梵蒂冈发动机可根据会计的经费公开"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="4" />
        <com.softtek.lai.widgets.CustomGridView
            android:id="@+id/photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:gravity="center"
            android:horizontalSpacing="3dp"
            android:verticalSpacing="3dp"
            android:columnWidth="79dp"
            android:layout_marginTop="5dp"
            android:scrollbars="none"
            android:stretchMode="none"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#cbcbcb"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:text="2015年02月14日"/>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="13sp"
                android:text="删除"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/tv_date"
                android:layout_marginLeft="15dp"
                android:textColor="@color/textview_blue"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/no_message"/>

            <CheckBox
                android:id="@+id/cb_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zan"
                android:button="@null"
                android:text="0"
                android:checked="false"
                android:background="@null"
                android:textColor="#f67169"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/zan_selector"
                android:drawablePadding="5dp"
                android:layout_gravity="right"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_dianzan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:background="#F1F1F1"
            android:gravity="center|left"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/love_story"/>
            <TextView
                android:id="@+id/tv_zan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#7a7a7a"
                android:textSize="10sp"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>