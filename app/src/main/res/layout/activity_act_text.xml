<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_act_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.softtek.lai.module.bodygame3.activity.view.ActTextActivity">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/frag1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/et_border2">

        <EditText
            android:id="@+id/et_mark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_none"
            android:imeOptions="actionSend"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:maxLength="300"
            android:textColorHint="#c0c0c0"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:src="@drawable/bodygame3_delete" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frag2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/et_border2">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_none"
            android:imeOptions="actionSend"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:maxLength="30"
            android:textColorHint="#c0c0c0"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:src="@drawable/bodygame3_delete" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="357dp"
        android:text="仅限十五个字"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
</LinearLayout>
