<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="fill_parent"
        android:layout_height="75dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rel_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin">
            <com.softtek.lai.widgets.CircleImageView
                android:id="@+id/img_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/img_default"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/img_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_default" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:src="@drawable/img_act_detail_more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dip"
            android:layout_marginRight="17dip"
            android:layout_toLeftOf="@+id/img"
            android:layout_toRightOf="@+id/rel_img"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:textColor="@color/editorText"
                    android:textSize="@dimen/textSize6" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_act_group_bg"/>
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/rcpb_prog"
                    android:layout_width="245dip"
                    android:layout_height="21dip"
                    app:rcBackgroundColor="#f1f0f0"
                    app:rcBackgroundPadding="0dp"
                    app:rcMax="100"
                    app:rcProgress="80"
                    app:rcProgressColor="#7bbd35"
                    android:layout_centerInParent="true"
                    app:rcRadius="100dp"
                    app:rcReverse="false"
                    app:rcSecondaryProgress="100"
                    app:rcSecondaryProgressColor="#f1f0f0" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>