<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="fill_parent"
        android:layout_height="86dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_order"
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/lin"
            android:layout_toRightOf="@+id/text_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.softtek.lai.widgets.CircleImageView
                    android:id="@+id/img_person"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_default"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rel_group"
                    android:layout_width="45dp"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/img_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_default" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/img_group_bj_2" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textColor="#ababab"
                android:text="跑团1"
                android:gravity="center"
                android:layout_marginTop="5dip"
                android:layout_gravity="center"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:src="@drawable/img_act_detail_more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="17dip"
            android:layout_toLeftOf="@+id/img"
            android:layout_toRightOf="@+id/lin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:textColor="@color/editorText"
                    android:textSize="@dimen/textSize6" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip">

                <ImageView
                    android:id="@+id/img_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_act_group_bg" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/rcpb_prog"
                    android:layout_width="208dip"
                    android:layout_height="8dip"
                    android:layout_centerVertical="true"
                    app:rcBackgroundColor="#f1f0f0"
                    app:rcBackgroundPadding="0dp"
                    android:layout_marginRight="15dip"
                    app:rcMax="100"
                    app:rcProgress="80"
                    app:rcProgressColor="#7bbd35"
                    app:rcRadius="50dip"
                    app:rcReverse="false"
                    app:rcSecondaryProgress="100"
                    app:rcSecondaryProgressColor="#f1f0f0" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>