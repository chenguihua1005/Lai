<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.softtek.lai.widgets.ObservableScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rel_head_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="match_parent"
                        android:layout_height="190dip"
                        android:src="@drawable/default_icon_rect" />

                    <RelativeLayout
                        android:id="@+id/rel_person"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_alignParentBottom="true"
                        android:background="#b2000000">

                        <LinearLayout
                            android:id="@+id/lin_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <com.softtek.lai.widgets.CircleImageView
                                android:id="@+id/civ_header"
                                android:layout_width="57dp"
                                android:layout_height="57dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_default" />

                            <TextView
                                android:id="@+id/text_before_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dip"
                                android:textColor="@color/white"
                                android:textSize="7sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/bg2_arrow1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="17dp"
                            android:layout_marginRight="30dp"
                            android:layout_toLeftOf="@id/iv_arrow"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:gravity="center|left"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/cb_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:button="@null"
                                    android:clickable="false"
                                    android:drawableLeft="@drawable/cb_gender"
                                    android:enabled="false" />

                                <TextView
                                    android:id="@+id/text_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="7dp"
                                    android:layout_toRightOf="@id/cb_gender"
                                    android:layout_toLeftOf="@+id/img_1"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_who"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="3dip"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/img_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_toLeftOf="@id/tv_who"
                                    android:src="@drawable/img_bg_pc_zj" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg2_orange2"
                                android:gravity="center|left"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/bg2_loss2" />

                                <TextView
                                    android:id="@+id/text_values"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:textColor="#333333"
                                    android:textSize="12sp" />

                                <CheckBox
                                    android:id="@+id/cb_star"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:button="@null"
                                    android:clickable="false"
                                    android:drawableLeft="@drawable/cb_mingxing"
                                    android:enabled="false" />

                                <CheckBox
                                    android:id="@+id/cb_fc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25dp"
                                    android:button="@null"
                                    android:clickable="false"
                                    android:drawableLeft="@drawable/cb_fuce"
                                    android:enabled="false" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25dp"
                                    android:src="@drawable/bg2_xunzhang" />

                                <TextView
                                    android:id="@+id/text_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_message_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_head_view"
                    android:layout_marginTop="18dip"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="31dip">

                        <RelativeLayout
                            android:id="@+id/rel_gg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dip">

                            <ImageView
                                android:id="@+id/img_gg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/img_gg_select" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_xtxx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/rel_gg">

                            <ImageView
                                android:id="@+id/img_xtxx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/img_xt_unselect" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:background="#78b543" />

                    <RelativeLayout
                        android:id="@+id/rel_message"
                        android:layout_width="fill_parent"
                        android:layout_height="98dip">

                        <RelativeLayout
                            android:id="@+id/rel_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip">

                            <com.softtek.lai.widgets.CircleImageView
                                android:id="@+id/img"
                                android:layout_width="39dip"
                                android:layout_height="39dip"
                                android:src="@drawable/img_default" />

                            <ImageView
                                android:id="@+id/img_lb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/speaker"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dip"
                            android:layout_marginRight="15dip"
                            android:layout_marginTop="23dip"
                            android:layout_toRightOf="@+id/rel_1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/word"
                                android:textSize="13sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip">

                                <TextView
                                    android:id="@+id/text_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/word6"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/text_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="查看更多"
                                    android:textColor="@color/word6"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_no_message"
                        android:layout_width="fill_parent"
                        android:layout_height="98dip"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="暂无消息"
                            android:textColor="@color/word13"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view_grey"
                    android:layout_width="fill_parent"
                    android:layout_height="13dip"
                    android:layout_below="@+id/lin_message_view"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_grey"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="31dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerVertical="true"
                            android:text="学员数据"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dip"
                            android:background="@color/green"
                            android:layout_weight="3"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:id="@+id/lin_select_type"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:background="@color/orange"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_select_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="按减重斤数"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="9dip"
                                android:layout_marginRight="15dip"
                                android:src="@drawable/img_bg_more_down_1" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/grey" />

                    <ListView
                        android:id="@+id/list_student"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"></ListView>
                </LinearLayout>

            </RelativeLayout>
        </com.softtek.lai.widgets.ObservableScrollView>

        <RelativeLayout
            android:id="@+id/rel_sy"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/img_sy"
            android:orientation="horizontal"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="fill_parent"
            android:layout_height="50dip">

            <RelativeLayout
                android:id="@+id/rel_title"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@color/green"
                android:orientation="horizontal"></RelativeLayout>

            <LinearLayout
                android:layout_width="175dip"
                android:layout_height="50dip"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dip"
                        android:layout_toLeftOf="@+id/img_class_down"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/text_class_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_title_more"
                android:layout_width="100dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/img_bg_title_more" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
