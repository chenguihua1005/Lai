<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.softtek.lai.module.laisportmine.view.MyNewsActivity">
<include layout="@layout/toolbar"/>
    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="#f1f1f1"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/im_news_tab"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/myrunning_heart"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慈善公益"
                android:layout_toRightOf="@+id/im_news_tab"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/myinfo_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/im_news_tab1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pk_tab"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慈善公益"
                android:layout_toRightOf="@+id/im_news_tab1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/myinfo_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/im_news_tab2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/invitation_tab"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慈善公益"
                android:layout_toRightOf="@+id/im_news_tab2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/myinfo_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/im_news_tab3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mynews_setting"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慈善公益"
                android:layout_toRightOf="@+id/im_news_tab3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/myinfo_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"/>
    
</LinearLayout>
</RelativeLayout>
