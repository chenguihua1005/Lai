<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/studentHonorMargin"
                android:layout_marginRight="@dimen/studentHonorMargin"
                android:layout_marginTop="@dimen/studentHonorMargin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:text="@string/studentHonorJZ"
                    android:textSize="@dimen/studentHonorTextSize" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:background="@color/black" />

                <com.softtek.lai.widgets.HorizontalListView
                    android:id="@+id/list_jz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/studentHonorMarginTop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/studentHonorMargin"
                android:layout_marginRight="@dimen/studentHonorMargin"
                android:layout_marginTop="@dimen/studentHonorMargin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:text="@string/studentHonorFC"
                    android:textSize="@dimen/studentHonorTextSize" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/lin_fc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_fc_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ale"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/img_fc_2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ale"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/img_fc_3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ale"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/studentHonorMargin"
                android:layout_marginRight="@dimen/studentHonorMargin"
                android:layout_marginTop="@dimen/studentHonorMargin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:text="@string/studentHonorYGJ"
                    android:textSize="@dimen/studentHonorTextSize" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:background="@color/black" />

                <com.softtek.lai.widgets.HorizontalListView
                    android:id="@+id/list_ygj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/studentHonorMarginTop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/studentHonorMargin"
                android:layout_marginRight="@dimen/studentHonorMargin"
                android:layout_marginTop="@dimen/studentHonorMargin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:text="@string/studentHonorsTAR"
                    android:textSize="@dimen/studentHonorTextSize" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="@dimen/studentHonorMarginTop"
                    android:background="@color/black" />

                <com.softtek.lai.widgets.HorizontalListView
                    android:id="@+id/list_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/studentHonorMarginTop" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>