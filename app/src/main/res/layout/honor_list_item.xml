<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:context="com.softtek.lai.module.retest.Write">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <com.softtek.lai.widgets.CircleImageView
                android:id="@+id/img"
                android:layout_width="@dimen/circleImage"
                android:layout_height="@dimen/circleImage"
                android:layout_margin="@dimen/spHonorMargin"
                android:src="@drawable/img_default"/>

        <ImageView
                android:id="@+id/img_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/spHonorMargin"
                android:src="@drawable/more"/>
        <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img"
                android:layout_centerVertical="true"
                android:textSize="@dimen/spHonorTextSize"
                android:text="dsdsdsd"/>

    </RelativeLayout>
</RelativeLayout>
