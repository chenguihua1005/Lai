<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/ll_selector_grey"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/rl_single">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:text="如何正确理解体脂率"
        android:textColor="@color/word"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_relese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="12dp"
        android:textSize="10sp"
        android:textColor="#A1A1A1"
        android:text="3小时前" />

    <TextView
        android:id="@+id/tv_hotnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/tv_title"
        android:layout_toRightOf="@id/tv_relese"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/hot_icon"
        android:drawablePadding="2dp"
        android:textColor="#a1a1a1"
        android:textSize="10sp"
        android:text="300" />
    <com.softtek.lai.widgets.CommentTextView
        android:id="@+id/tv_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/tv_title"
        android:layout_toRightOf="@id/tv_hotnum"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="#75ba2b"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_single"
        android:layout_width="114dp"
        android:layout_height="74dp"
        android:src="@drawable/default_laiclass12"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>