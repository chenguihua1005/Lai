<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey4"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.softtek.lai.module.login.view.ForgetActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/toolbar"
        android:background="#c9c8ce"
        android:focusable="false"

        android:focusableInTouchMode="false"
        android:padding="9dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pk_chouma_editor_boder"
            android:hint="手机号或者姓名"
            android:paddingLeft="28dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp">

            <requestFocus />

        </EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"
            android:src="@drawable/pk_search" />

    </FrameLayout>

    <ListView
        android:id="@+id/list_contant"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dip"
        android:scrollbars="none" />
</LinearLayout>
