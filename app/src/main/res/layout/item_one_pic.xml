<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_single"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="12dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_one_pic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="如何正确理解体脂率"
                android:layout_marginBottom="4dp"
                android:textColor="@color/word"
                android:textSize="15sp" />

            <include layout="@layout/fever_layout" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">

            <com.softtek.lai.widgets.RectangleImage
                android:id="@+id/iv_one_pic"
                android:layout_width="114dp"
                android:layout_height="74dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_icon_rect" />
        </LinearLayout>

</LinearLayout>