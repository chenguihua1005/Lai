<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_signa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.softtek.lai.module.bodygame3.head.view.EditSignaActivity">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        >
    <com.softtek.lai.module.bodygame3.head.view.ClearEditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="写下你想说的..."
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:gravity="top"
        android:padding="10dp"
        android:maxLength="30"
        android:background="@drawable/sinature_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可输入字数30"
        android:textSize="10sp"
        android:textColor="#cccccc"
        android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/bt_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布签名"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:background="@drawable/btn_dismissclass"/>
    </LinearLayout>

</RelativeLayout>
