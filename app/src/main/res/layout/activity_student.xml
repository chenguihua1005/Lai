<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                tools:context=".module.bodygame.CounselorActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include layout="@layout/toolbar"></include>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="198dp">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/iv_st_adv"
                        android:scaleType="centerCrop"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="13dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总参赛人数"
                        android:textSize="14sp"
                        android:textColor="#c1c1c1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp"
                        android:text="20,167"/>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="41sp"
                    android:layout_marginTop="21dp"
                    android:background="#e6e6e6"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="13dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总减重斤数"
                        android:textSize="14sp"
                        android:textColor="#c1c1c1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp"
                        android:text="120,573"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/refresh"/>
                </LinearLayout>

            </LinearLayout>

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView3">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                >

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:padding="2dp"
                    >

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2.5dp"
                                android:layout_weight="1"

                        >
                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                            >

                                <LinearLayout
                                        android:id="@+id/ll_st_jibenshuju"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center|bottom"
                                        android:background="#F4F4F4"
                                >
                                    <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:background="@drawable/basedate"/>
                                    <TextView
                                            android:id="@+id/bt_tiguansai"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/gamestA"
                                            android:textSize="16sp"
                                            android:padding="2dp"
                                            android:textColor="#666666"
                                            android:layout_marginBottom="11dp"
                                            android:background="@null"
                                    />
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/ll_st_shangchuan"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center|bottom"
                                android:background="#F4F4F4"
                                android:layout_marginLeft="2.5dp"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/uploadphoto"/>
                            <TextView
                                    android:id="@+id/bt_review"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gamestB"
                                    android:textSize="16sp"
                                    android:padding="2dp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="11dp"
                                    android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:padding="2dp">

                        <LinearLayout
                                android:id="@+id/ll_st_fuce"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2.5dp"
                                android:layout_weight="1"
                        >

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:background="#F4F4F4"
                                        android:gravity="center|bottom">
                                    <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/bt_counselor_fuce"/>

                                    <TextView
                                            android:id="@+id/bt_counselor_fuce"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/gamestC"
                                            android:textSize="16sp"
                                            android:padding="2dp"
                                            android:textColor="#666666"
                                            android:layout_marginBottom="11dp"
                                            android:background="@null"/>
                                </LinearLayout>

                                <TextView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:text=""
                                        android:textSize="12sp"
                                        android:id="@+id/tv_st_num"
                                        android:layout_gravity="right"
                                        android:gravity="center"
                                        android:textColor="#ffffff"
                                        android:visibility="gone"
                                        android:background="@drawable/circlebac"/>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/ll_st_jianzhong"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center|bottom"
                                android:layout_marginLeft="2.5dp"
                                android:background="#F4F4F4"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/lossweight"/>

                            <TextView
                                    android:id="@+id/bt_process"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gamestD"
                                    android:textSize="16sp"
                                    android:padding="2dp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="11dp"
                                    android:background="@null"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:padding="2dp">

                        <LinearLayout
                                android:id="@+id/ll_st_chengjidan"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2.5dp"
                                android:layout_weight="1"
                        >

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:background="#F4F4F4"
                                        android:gravity="center|bottom">
                                    <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/scorecard"/>

                                    <TextView
                                            android:id="@+id/bt_match"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/gamestE"
                                            android:textSize="16sp"
                                            android:padding="2dp"
                                            android:textColor="#666666"
                                            android:layout_marginBottom="11dp"
                                            android:background="@null"/>
                                </LinearLayout>

                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/ll_st_rongyu"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="#F4F4F4"
                                android:gravity="center|bottom"
                                android:layout_marginLeft="2.5dp"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/bt_honor"/>

                            <TextView
                                    android:id="@+id/btn_tip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gamestF"
                                    android:textSize="16sp"
                                    android:padding="2dp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="11dp"
                                    android:background="@null"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:padding="2dp">

                        <LinearLayout
                                android:id="@+id/ll_st_saikuang"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2.5dp"
                                android:layout_weight="1"
                        >

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:background="#F4F4F4"
                                        android:gravity="center|bottom">
                                    <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/bt_match"/>

                                    <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/gamestG"
                                            android:textSize="16sp"
                                            android:padding="2dp"
                                            android:textColor="#666666"
                                            android:layout_marginBottom="11dp"
                                            android:background="@null"/>
                                </LinearLayout>


                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/ll_st_tipst"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="#F4F4F4"
                                android:gravity="center|bottom"
                                android:layout_marginRight="2.5dp"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/btn_tip"/>

                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tipsgamestI"
                                    android:textSize="16sp"
                                    android:padding="2dp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="11dp"
                                    android:background="@null"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
