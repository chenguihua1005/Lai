<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >
        <ImageView
            android:id="@+id/im_uploadphoto_banner_list"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:scaleType="fitCenter"
            android:background="#c0c0c0"
            android:src="@drawable/default_pic"/>
        <TextView
            android:id="@+id/tv_downphoto_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginRight="114dp"
            android:layout_marginBottom="35dp"
            android:layout_gravity="right|bottom"/>

        <com.softtek.lai.widgets.CircleImageView
            android:id="@+id/cir_downphoto_head_list"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/img_default"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="15dp"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天"
            android:textSize="20sp"
            android:textColor="#333"
            />
        <ImageView
            android:id="@+id/imtest_list"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:layout_marginLeft="17dp"
            android:background="#dadada"
            android:src="@drawable/takephoto_upload"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
