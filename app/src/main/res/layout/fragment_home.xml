<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <!--<com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >
                <com.ggx.jerryguan.viewflow.ViewFlow
                    android:id="@+id/vf_adv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:sidebuffer="3"/>
                <com.ggx.jerryguan.viewflow.CircleFlowIndicator
                    android:id="@+id/cfi_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fadeOut="500"
                    app:radius="5dp"
                    app:inactiveType="fill"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <com.softtek.lai.widgets.CustomGridView
                android:id="@+id/gv_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:numColumns="5">

            </com.softtek.lai.widgets.CustomGridView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体管赛"
                android:id="@+id/button" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/iv_activity"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/healthyDisport"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/iv_healthy"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>
    <!--</com.handmark.pulltorefresh.library.PullToRefreshScrollView>-->
</LinearLayout>