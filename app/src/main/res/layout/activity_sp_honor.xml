<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.softtek.lai.module.login.view.ForgetActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spHonorMarginTop"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_sp_honor_bg">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop1"
                android:text="服务人数"
                android:textColor="@color/word6"
                android:textSize="@dimen/textSize2" />

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_servernum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="0"
                    android:textSize="@dimen/textSize3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/green"
                    android:textSize="@dimen/textSize10" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop3">

                <ImageView
                    android:id="@+id/img_fwrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_sp_honor_yin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_fwrs_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/text_mc"
                        android:text="top10"
                        android:textColor="@color/word7"
                        android:textSize="@dimen/textSize8"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/text_fwrs_mc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/word7"
                        android:textSize="@dimen/textSize1" />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spHonorMarginTop"
            android:background="@drawable/img_sp_honor_bg">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop1"
                android:text="减重斤数"
                android:textColor="@color/word6"
                android:textSize="@dimen/textSize2" />

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="0"
                    android:textSize="@dimen/textSize3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="斤"
                    android:textColor="@color/green"
                    android:textSize="@dimen/textSize10" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop3">

                <ImageView
                    android:id="@+id/img_jzjs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_sp_honor_yin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_jzjs_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/text_mc"
                        android:text="top10"
                        android:textColor="@color/word7"
                        android:textSize="@dimen/textSize8"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/text_jzjs_mc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/word7"
                        android:textSize="@dimen/textSize1" />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spHonorMarginTop"
            android:background="@drawable/img_sp_honor_bg">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop1"
                android:text="复测率"
                android:textColor="@color/word6"
                android:textSize="@dimen/textSize2" />

            <LinearLayout
                android:id="@+id/lin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_rtest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="0"
                    android:textSize="@dimen/textSize3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/green"
                    android:textSize="@dimen/textSize10" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spHonorMarginTop3">

                <ImageView
                    android:id="@+id/img_fc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_sp_honor_yin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_fc_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/text_mc"
                        android:text="top10"
                        android:textColor="@color/word7"
                        android:textSize="@dimen/textSize8"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/text_fc_mc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/word7"
                        android:textSize="@dimen/textSize1"
                        />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spHonorMarginTop"
            android:background="@drawable/img_sp_honor_bg">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:background="@color/green1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin"
            android:src="@drawable/img_sp_honor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spHonorMarginLeft1"
            android:text="明星学员"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize1" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_stars"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin" />
</LinearLayout>
