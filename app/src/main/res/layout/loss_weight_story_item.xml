<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.softtek.lai.widgets.CircleImageView
            android:id="@+id/civ_header_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/img_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="Lee" />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#666666"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解他.啊哈哈哈哈哈哈" />
            <GridLayout
                android:layout_marginTop="21dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_gravity="fill">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    android:src="@drawable/test_header"/>
                <ImageView
                    android:id="@+id/img_2"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    android:src="@drawable/test_header"/>
                <ImageView
                    android:id="@+id/img_3"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:src="@drawable/test_header"/>
                <ImageView
                    android:id="@+id/img_4"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/test_header"/>
                <ImageView
                    android:id="@+id/img_5"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:src="@drawable/test_header"/>
                <ImageView
                    android:id="@+id/img_6"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:src="@drawable/test_header"/>
                <ImageView
                    android:id="@+id/img_7"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:src="@drawable/test_header"/>
                <ImageView
                    android:id="@+id/img_8"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:src="@drawable/test_header"/>
                <ImageView
                    android:id="@+id/img_9"
                    android:layout_height="79dp"
                    android:layout_width="79dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:src="@drawable/test_header"/>
            </GridLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#cbcbcb"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="2016年3月10日"/>
                <CheckBox
                    android:id="@+id/cb_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zan"
                    android:button="@null"
                    android:text="120"
                    android:background="@null"
                    android:textColor="#f67169"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/zan_selector"
                    android:drawablePadding="5dp"
                    android:layout_gravity="right"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="18dp"
                android:background="#F1F1F1"
                android:gravity="center|left">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/love_story"/>
                <TextView
                    android:id="@+id/tv_zan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#7a7a7a"
                    android:textSize="10sp"
                    android:text="小明，David,小利"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>