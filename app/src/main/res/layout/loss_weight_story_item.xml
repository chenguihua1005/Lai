<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:padding="16dp">

    <com.softtek.lai.widgets.CircleImageView
        android:id="@+id/civ_header_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/img_default" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/civ_header_image"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cb_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/cb_guanzhu_bg"
                android:button="@null"
                android:gravity="center" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="4"
            android:textColor="#666666"
            android:textSize="15sp" />

        <com.softtek.lai.widgets.CustomGridView
            android:id="@+id/photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:columnWidth="79dp"
            android:gravity="center"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:stretchMode="none"
            android:verticalSpacing="3dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="2015年02月14日"
                android:textColor="#cbcbcb"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_date"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="删除"
                android:textColor="@color/textview_blue"
                android:textSize="13sp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cb_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/zan_selector"
                android:drawablePadding="5dp"
                android:src="@drawable/zan"
                android:text="0"
                android:textColor="#f67169" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_dianzan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:background="#F1F1F1"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/love_story" />

            <TextView
                android:id="@+id/tv_zan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#7a7a7a"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>