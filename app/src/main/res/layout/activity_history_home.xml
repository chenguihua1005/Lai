<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".module.historydate.view.HistoryDataActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mytoolbar_green"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center|left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_title_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_editor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="编辑图片"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_my_base"
            android:layout_width="fill_parent"
            android:layout_height="38dip"
            android:background="@color/grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin"
                android:text="基础数据"
                android:textSize="@dimen/textSize1" />

            <ImageView
                android:id="@+id/img_more_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/img_group_main_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/img_more_1"
                android:text="全部曲线图"
                android:textSize="@dimen/textSize1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"
                    android:background="#74BB2A" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_total_loss_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共减重"
                        android:textColor="#76BA2A"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_totle_lw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="0.0kg"
                        android:textColor="#76BA2A"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"
                    android:background="#74BB2A" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_loss_before"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F2F0F1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/default_icon_rect" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/vs_left"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="减重前"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_loss_before"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="7dp"
                                android:text="0.0斤"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </FrameLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_loss_after"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F2F0F1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/default_icon_rect" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/vs_right"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_loss_after_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="减重后"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_loss_after"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="7dp"
                                android:text="0.0斤"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/vs_border">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/vs_vs" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rel_my_honor"
            android:layout_width="fill_parent"
            android:layout_height="38dip"
            android:layout_marginTop="10dip"
            android:background="@color/grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin"
                android:text="我的荣誉"
                android:textSize="@dimen/textSize1" />

            <ImageView
                android:id="@+id/img_more_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/img_group_main_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/img_more_2"
                android:text="全部勋章"
                android:textSize="@dimen/textSize1" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_my_weight"
            android:layout_width="fill_parent"
            android:layout_height="38dip"
            android:layout_marginTop="10dip"
            android:background="@color/grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin"
                android:text="我的减重故事"
                android:textSize="@dimen/textSize1" />

            <ImageView
                android:id="@+id/img_more_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/img_group_main_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/img_more_3"
                android:text="全部故事"
                android:textSize="@dimen/textSize1" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:gravity="left">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center|left">
                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="13"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    />
                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="三月"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:background="@drawable/default_icon_square"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">
                <!--<TextView
                    android:id="@+id/tv_log_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#333333" />-->
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:maxLines="3"/>
                <CheckBox
                    android:id="@+id/cb_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zan"
                    android:button="@null"
                    android:text="120"
                    android:background="@null"
                    android:textColor="#f67169"
                    android:drawableLeft="@drawable/zan_selector"
                    android:drawablePadding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rel_my_photo"
            android:layout_width="fill_parent"
            android:layout_height="38dip"
            android:layout_marginTop="10dip"
            android:background="@color/grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin"
                android:text="我的相册"
                android:textSize="@dimen/textSize1" />

            <ImageView
                android:id="@+id/img_more_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/img_group_main_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/img_more_4"
                android:text="全部照片"
                android:textSize="@dimen/textSize1" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>