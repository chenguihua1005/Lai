<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<FrameLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_advcc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_icon_rect"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="21dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全国总参赛人数"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        />
                    <TextView
                        android:id="@+id/tv_totalpersoncc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="21sp"
                        android:textColor="#fcff00"/>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="41sp"
                    android:layout_marginTop="21dp"
                    android:background="#e6e6e6"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="13dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全国总减重斤数"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        />
                    <TextView
                        android:id="@+id/tv_total_losscc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="21sp"
                        android:textColor="#fcff00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:id="@+id/tv_totalcc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/refresh"/>
                </LinearLayout>
            </LinearLayout>
            </FrameLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:visibility="gone"
                        >

                        <LinearLayout
                            android:id="@+id/ll_tiguansai"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"

                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center|bottom"
                                    android:background="#F4F4F4"
                                    >
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/bt_tiguansai"/>
                                    <TextView
                                        android:id="@+id/bt_tiguansai"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/CounselorA"
                                        android:textSize="16sp"
                                        android:padding="2dp"
                                        android:background="@null"
                                        />
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_review"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:background="#F4F4F4"
                            android:layout_margin="2dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/bt_review"/>
                            <TextView
                                android:id="@+id/bt_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/CounselorB"
                                android:textSize="16sp"
                                android:padding="2dp"
                                android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_new_student"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_margin="2dp"
                            android:background="#F4F4F4"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/bt_new_student"/>
                            <TextView
                                android:id="@+id/bt_new_student"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/CounselorC"
                                android:textSize="16sp"
                                android:padding="2dp"
                                android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/ll_counselor_fuce"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            >

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:background="#F4F4F4"
                                    android:gravity="center|bottom">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/bt_counselor_fuce"/>

                                    <TextView
                                        android:id="@+id/bt_counselor_fuce"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/CounselorD"
                                        android:textSize="16sp"
                                        android:padding="2dp"
                                        android:background="@null"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:text="10+"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:gravity="center"
                                    android:id="@+id/tv_fucenum"
                                    android:visibility="gone"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/circlebac"/>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_process"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_margin="2dp"
                            android:background="#F4F4F4"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/bt_process"/>

                            <TextView
                                android:id="@+id/bt_process"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/CounselorE"
                                android:textSize="16sp"
                                android:padding="2dp"
                                android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_honor"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#F4F4F4"
                            android:layout_margin="2dp"
                            android:gravity="center|bottom"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/bt_honor"/>

                            <TextView
                                android:id="@+id/bt_honor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/CounselorF"
                                android:textSize="16sp"
                                android:padding="2dp"
                                android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <LinearLayout
                            android:id="@+id/ll_match"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            >

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:background="#F4F4F4"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center|bottom">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/bt_match"/>

                                    <TextView
                                        android:id="@+id/bt_match"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/CounselorG"
                                        android:textSize="16sp"
                                        android:padding="2dp"
                                        android:layout_marginBottom="11dp"
                                        android:background="@null"/>
                                </LinearLayout>

                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tipcc"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#F4F4F4"
                            android:gravity="center|bottom"
                            android:layout_marginLeft="10dp"
                            android:layout_margin="2dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/btn_tip"/>

                            <TextView
                                android:id="@+id/btn_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/CounselorH"
                                android:textSize="16sp"
                                android:padding="2dp"
                                android:layout_marginBottom="11dp"
                                android:background="@null"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <RelativeLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/fl_right"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:background="@drawable/email" />

                <ImageView
                    android:id="@+id/img_red"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/img_red"
                    android:visibility="gone" />
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
