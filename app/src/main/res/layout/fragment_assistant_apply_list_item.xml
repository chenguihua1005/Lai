<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:context=".module.retest.WriteActivity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <com.softtek.lai.widgets.CircleImageView
                android:id="@+id/img"
                android:layout_width="@dimen/circleImage"
                android:layout_height="@dimen/circleImage"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/fragmentAssistantApplyMargin"
                android:src="@drawable/img_default"/>

        <TextView
                android:id="@+id/text_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/fragmentAssistantApplyMargin"
                android:text="已通过"
                android:visibility="gone"/>

        <LinearLayout
                android:id="@+id/lin_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/fragmentAssistantApplyMargin"
                android:orientation="vertical">

            <Button
                    android:id="@+id/but_accept"
                    android:layout_width="@dimen/fragmentAssistantApplyButtonWidth"
                    android:layout_height="@dimen/fragmentAssistantApplyButtonHeight"

                    android:text="接受"/>

            <Button
                    android:id="@+id/img_refuse"
                    android:layout_width="@dimen/fragmentAssistantApplyButtonWidth"
                    android:layout_height="@dimen/fragmentAssistantApplyButtonHeight"

                    android:text="拒绝"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default"
                    android:textSize="@dimen/fragmentAssistantApplyNameTextSize"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fragmentAssistantApplyMargin"
                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18261576084"
                        android:textSize="@dimen/fragmentAssistantApplyValueTextSize"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    s
</RelativeLayout>
