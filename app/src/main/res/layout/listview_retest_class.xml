<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_height="60dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一月班"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_classname"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="#333">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_classname"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_classname"
                android:id="@+id/tv_title"
                android:layout_centerVertical="true"
                android:text="复仇者联盟"/>
        <TextView
                android:id="@+id/kuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_title"
                android:textSize="18sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:text="（"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/kuo"
                android:id="@+id/tv_personum"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="）"
                android:layout_toRightOf="@+id/tv_personum"
            android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="#333"/>
        <ImageView
                android:id="@+id/rbtn_retest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:src="@drawable/radiocir"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
        />
    </RelativeLayout>
</LinearLayout>
