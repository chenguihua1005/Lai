<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="backgroundSelector" format="integer"/>
        <attr name="textTint" format="color"/>
    </declare-styleable>

    <declare-styleable name="ArrowSpinner2">
        <attr name="arrowTint2" format="color" />
        <attr name="hideArrow2" format="boolean" />
        <attr name="textTint2" format="color"/>
        <attr name="textSize2" format="dimension"/>
        <attr name="pop2Width" format="dimension"/>
        <attr name="pop2Height" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="ArrowSpinner3">
        <attr name="arrowColor" format="color" />
        <attr name="hideArrow3" format="boolean" />
        <attr name="textTint3" format="color"/>
    </declare-styleable>

    <declare-styleable name="ArrowRectangleView">
        <attr name="arrow_width" format="dimension" />
        <attr name="arrow_height" format="dimension" />
        <attr name="arrow_offset" format="dimension" />
        <attr name="arrow_position" format="enum">
            <enum name="left" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="right" value="3"/>
        </attr>
        <attr name="radius" format="dimension" />
        <attr name="background_color" format="color" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_thickness" format="dimension" />
    </declare-styleable>
</resources>